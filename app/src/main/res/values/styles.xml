<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/SeaGreen</item>
        <item name="colorPrimaryDark">@color/DarkSeaGreen</item>
        <item name="colorAccent">@color/Accent</item>
        <!-- ToolBarのタイトルテキスト色 -->
        <item name="android:textColorPrimary">@color/DarkGrey</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SettingsMenuTheme">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

</resources>
